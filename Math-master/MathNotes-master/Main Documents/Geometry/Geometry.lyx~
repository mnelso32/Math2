\backslash

\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

0 
\backslash
arrow[r] & A'_{i}   
\backslash
arrow[r, "
\backslash
varphi _{i}"] 
\backslash
